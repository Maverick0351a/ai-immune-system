# Server
PORT=8088
NODE_ENV=development

# Admin bootstrap
ADMIN_TOKEN=change-me-admin-token

# Optional: BYOK tenant API key bootstrap (for local testing)
TEST_API_KEY=demokey-123

# OpenAI (optional) used for LLM fallback
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_FALLBACK_MODEL=gpt-4o
OPENAI_TIMEOUT_MS=8000
LLM_DEBUG=
LLM_CACHE=1

# Stripe (optional) for metered billing on LLM fallback
STRIPE_API_KEY=
# After running createMeteredProductAndPrice script, set the resulting price id:
STRIPE_WEBHOOK_SECRET=
# If using metered billing, each tenant needs a subscription item id.
# You can store it per-tenant in DB; or set a default price id for on-the-fly subscriptions (advanced).
STRIPE_METERED_PRICE_ID=

# Free tier: number of LLM fallbacks per month at no charge
FREE_TIER_FALLBACKS=25

# SQLite file (created automatically)
DATABASE_URL=file:./data/ais.db
