{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "rootDir": "src",
    "outDir": "dist",
    "resolveJsonModule": true,
    "types": ["node", "vitest"]
  },
  "include": ["src", "schemas"],
  "exclude": ["test"]
}
